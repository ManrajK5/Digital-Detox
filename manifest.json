{
    "manifest_version": 3,
    "name": "Dopamine Detox",
    "version": "1.0",
    "description": "A Chrome extension to block websites and promote healthier online habits.",
    "permissions": ["storage", "declarativeNetRequest", "scripting"],
    "host_permissions": ["*://*/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  
  
  
  
  